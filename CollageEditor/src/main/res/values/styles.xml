    <style name="CustomGalleryTheme" parent="GalleryTheme">
        <item name="picker_statusBarColor">@color/color_white</item>
        <item name="picker_toolBarBackBtn">@drawable/gallery_down</item>
        <item name="picker_toolBarBackgroundColor">@color/color_white</item>
